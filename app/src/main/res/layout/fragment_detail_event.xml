<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <GridLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:columnCount="3"
                >

                <TextView
                    android:id="@+id/numberDayTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                    android:paddingRight="5dp"
                    android:text="1"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="40sp"
                    />

                <TextView
                    android:id="@+id/dayOfTheWeekTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:paddingBottom="1dp"
                    android:text="Monday"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/monthAndYearTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:text="May 2017"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="20sp"
                    />
            </GridLayout>

            <GridLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:columnCount="1"
                >

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="03:20PM"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="40sp"
                    />

            </GridLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/titleTextViewDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textColor="@color/colorPrimaryText"
            android:textSize="25sp">

        </TextView>

        <TextView
            android:id="@+id/discriptionTextViewDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Write here..."
            android:textColor="@color/colorPrimaryText"
            android:textSize="15sp"
            />
    </LinearLayout>


</ScrollView>