<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:orientation="horizontal">

            <GridLayout
                android:id="@+id/calendarLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:columnCount="3"

                >

                <TextView
                    android:id="@+id/numberDayEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                    android:text="1"
                    android:textColor="@android:color/black"
                    android:textSize="40sp"

                    />

                <TextView
                    android:id="@+id/dayOfTheWeekEvent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:text="Monday"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/monthAndYearEvent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:text="May 2017"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"

                    />
            </GridLayout>

            <GridLayout
                android:id="@+id/timeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:columnCount="1"
                android:onClick="getCurrentTime"
                >

                <TextView
                    android:id="@+id/timeEvent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="03:20PM"
                    android:textColor="@android:color/black"
                    android:textSize="40sp"
                    />

            </GridLayout>


        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/titleEventTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:textColorHint="@color/colorAccent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:textColor="@android:color/black"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/descriptionEventTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:hint="Write here..."
            android:textColorHint="@color/colorAccent"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/saveEventFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_save_24dp"/>

    </GridLayout>



</ScrollView>