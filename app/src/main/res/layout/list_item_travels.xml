<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="@dimen/marginCardView"
    android:padding="@dimen/paddingCardView"
    app:cardCornerRadius="@dimen/CornerRadiusCardView"
    app:cardElevation="@dimen/ElevationCardView"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/titleTravelsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Travels name"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/descriptionTravelsTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:hint="Travels Descriptions"
            android:textColor="@color/colorPrimaryText"
            android:textSize="15sp"/>

    </LinearLayout>


</android.support.v7.widget.CardView>